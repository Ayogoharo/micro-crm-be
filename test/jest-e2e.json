{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../src/$1"
  },
  "globalSetup": "<rootDir>/setup-e2e.ts",
  "globalTeardown": "<rootDir>/teardown-e2e.ts",
  "testTimeout": 30000,
  "maxWorkers": 1,
  "verbose": true
}
