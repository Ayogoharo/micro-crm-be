# Application
NODE_ENV=development
PORT=4000

# Frontend (for CORS configuration)
FRONTEND_HOST=localhost
FRONTEND_PORT=3000

# Database
# When running locally (without Docker): use localhost and port 5434
# When running in Docker: docker-compose.yml automatically sets DATABASE_HOST=postgres and DATABASE_PORT=5432
DATABASE_HOST=localhost
DATABASE_PORT=5434
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=micro_crm

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# CORS (automatically built from FRONTEND_HOST and FRONTEND_PORT)
# The CORS origin will be: http://${FRONTEND_HOST}:${FRONTEND_PORT}
